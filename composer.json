{
  "name": "webmasterskaya/utility-string-helper",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Artem Vasilev",
      "email": "kern.usr@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Webmasterskaya\\Utility\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Webmasterskaya\\Utility\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.4|^8"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.4"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform-check": true
  },
  "scripts": {
    "test": [
      "phpunit --color=always"
    ],
    "test-no-coverage": [
      "phpunit --color=always --no-coverage"
    ]
  }
}